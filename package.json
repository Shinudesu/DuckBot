{
  "name": "@duckbot/shinu",
  "version": "1.0.0",
  "description": "Discord bot for private server",
  "repository": "https://github.com/Shinudesu/DuckBot.git",
  "author": "shinudesu",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@3.0.0",
  "engines": {
    "node": ">=14.x"
  },
  "scripts": {
    "packages": "yarn workspaces foreach",
    "prebuild": "yarn workspaces foreach -pt run prebuild",
    "build": "yarn workspaces foreach -pt run build",
    "client": "yarn workspace @duckbot/client",
    "server": "yarn workspace @duckbot/server",
    "common": "yarn workspace @duckbot/common",
    "dashboard": "yarn workspace @duckbot/dashboard",
    "start:dev": "concurrently \"yarn server start:dev\" \"yarn client start:dev\" \"yarn dashboard start:dev\"",
    "heroku:dev": "heroku local",
    "start": "yarn server:start",
    "lint": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier --write .",
    "postinstall": "husky install",
    "heroku-postbuild": "yarn workspaces focus --a --production",
    "test": "jest"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.31.0",
    "eslint-config-ruppy-node": "^1.7.0",
    "eslint-config-ruppy-react": "^1.9.0",
    "eslint-config-ruppy-ts": "^1.7.0",
    "eslint-plugin-hooks": "latest",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.1",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "concurrently": "^6.2.0",
    "dotenv-cli": "^4.0.0",
    "rimraf": "^3.0.2"
  }
}
